<style>
    .container {
        margin-top: 100px;
        margin-left: 100px;
    }
</style>

<body>
    <div class="container">
        <div id="tooltip" style="position: relative;
        display: inline-block;
        border-bottom: 1px dotted black;">Hover over me
            <span id="tooltiptext" style="visibility: hidden;
            background-color: rgba(51, 51, 51, 0.9);
            color: #fff;
            text-align: center;
            padding: 5px 5px;
            border-radius: 6px;
            position: absolute;
            bottom: 100%;
            left: 0;
            z-index: 1;">
                Tooltip text
            </span>
        </div>
    </div>

</body>
<script>
    const selectorText = $("#tooltiptext")
    const openTooltip = () => {
        selectorText.css('visibility', 'visible')
    }

    const closeTooltip = () => {
        selectorText.css('visibility', 'hidden')
    }
    $("#tooltip").on("mouseenter", openTooltip).on("mouseleave", closeTooltip);
</script>

</html>
